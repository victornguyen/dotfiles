# Open applications
ctrl + shift - space : open /Applications/kitty.app
ctrl + shift - c : open /Applications/Google\ Chrome.app
ctrl + shift - f : open /Applications/Firefox.app
ctrl + shift - r : open /Applications/Spotify.app

# Shift focus
shift + alt - h : yabai -m window --focus west
shift + alt - j : yabai -m window --focus south
shift + alt - k : yabai -m window --focus north
shift + alt - l : yabai -m window --focus east

# Swap windows
shift + alt + ctrl - h : yabai -m window --swap west
shift + alt + ctrl - j : yabai -m window --swap south
shift + alt + ctrl - k : yabai -m window --swap north
shift + alt + ctrl - l : yabai -m window --swap east

# Increase window size
ctrl + cmd - h : yabai -m window --resize left:-50:0
ctrl + cmd - j : yabai -m window --resize bottom:0:50
ctrl + cmd - k : yabai -m window --resize top:0:-50
ctrl + cmd - l : yabai -m window --resize right:50:0

# Decrease window size
ctrl + alt - h : yabai -m window --resize left:50:0
ctrl + alt - j : yabai -m window --resize bottom:0:-50
ctrl + alt - k : yabai -m window --resize top:0:50
ctrl + alt - l : yabai -m window --resize right:-50:0

# Balance size of windows
shift + alt - 0 : yabai -m space --balance

# Fullscreen toggle
shift + alt - f : yabai -m window --toggle zoom-fullscreen

# (Un)float window and center on screen
shift + alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# Rotate windows
shift + alt - r : yabai -m space --rotate 90

# Mirror windows on y-axis
shift + alt - y : yabai -m space --mirror y-axis
