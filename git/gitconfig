[user]
  name = Victor Nguyen
  email = vic.nguyen@gmail.com
[core]
  editor = /usr/local/bin/vim
  excludesfile = ~/.gitignore
[credential]
  helper = osxkeychain
[push]
  default = simple
[alias]
  aa = add --all
  ap = add . -p
  cm = commit -v
  cma = commit --amend
  copysha = !git rev-parse HEAD | pbcopy
  df = diff
  pl = pull
  ps = push
  uncommit = reset --soft HEAD^
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX
[color "diff"]
  meta = yellow bold
