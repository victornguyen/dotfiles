{
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.autoFixOnSave": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim", ".git/"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    }
  },
  "list.normalMappings": {
    "v": "action:vsplit"
  }
}
